{{ header }}
{{ column_left }}

<div id="content" class="arc-module arc-base">
    {% set architect = architect|merge({'i18n': i18n}) %}
    <script>var architect = {{ architect|json_encode() }}; delete architect.model;</script>

    <div class="container-fluid">
    <div class="content-head">
        <h1>{{ architect.title }}</h1>

        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>

        <div class="pull-right">
            <a href="{{ architect.url_module }}&module_id=0" class="btn btn-primary arc-insert">{{ i18n.text_insert }}</a>
        </div>
    </div> <!-- /.content-head -->

    <div class="content-body">
        <div class="panel panel-default panel-body isl-main-panel">

            <div class="tab-navigation" style="position:relative">
                <ul class="nav nav-tabs arc-nav-base" id="main-tabs">
                    <li class="active"><a href="#tab-manage" data-toggle="tab">{{ i18n.text_manage }}</a></li>
                    <li><a href="#tab-gist" data-toggle="tab">{{ i18n.text_gist }}</a></li>
                    <li><a href="#tab-help" data-toggle="tab">{{ i18n.text_help }}</a></li>
                </ul>
            </div>

            <div class="tab-content">
                <div id="tab-manage" class="tab-pane fade active in">{{ tab_manage }}</div>
                <div id="tab-gist" class="tab-pane fade">{{ tab_gist }}</div>
                <div id="tab-help" class="tab-pane fade">{{ tab_help }}</div>
            </div>

        </div>
    </div> <!-- /.content-body -->

    </div>

    <!-- ============ -->

    <div class="arc-notification">
        {% for notify in notifications %}
            <div class="alert alert-{{ notify.type }}">
                {{ notify.message }}
            </div>
        {% endfor %}
    </div>

</div> <!-- /.arc-module -->

{{ footer }}
