<div class="tab-panel form-horizontal">
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ i18n.entry_customer_group }}</label>
        <div class="col-sm-9 js-toggle">

            <div class="radio">
                <label>
                    <input type="radio" name="option[customer_group]" value="0" {{ not architect.setting.option.customer_group ? 'checked' : '' }}>
                    {{ i18n.text_all_customer }}
                </label>
            </div>

            <div class="radio">
                <label>
                    <input type="radio" name="option[customer_group]" value="1" {{ architect.setting.option.customer_group ? 'checked' : '' }}>
                    {{ i18n.text_selected_customer_group }}
                </label>
                <div class="well well-sm js-toggle-target" {{ not architect.setting.option.customer_group ? 'style="display:none"' : '' }}>
                    <label>
                        <input type="checkbox" name="option[customer_group_ids][]" value="0" {{ 0 in architect.setting.option.customer_group_ids ? 'checked' : '' }}> {{ i18n.text_guest_visitor }}
                    </label>

                    {% for group in customer_groups %}
                        <label>
                            <input type="checkbox" name="option[customer_group_ids][]" value="{{ group.customer_group_id }}" {{ group.customer_group_id in architect.setting.option.customer_group_ids ? 'checked' : '' }}>
                            {{ group.name }}
                            {{ group.customer_group_id == default_cust_group ? '<b>(' ~ i18n.text_default ~ ')</b>' : '' }}
                        </label>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

    <div class="form-group date-duration">
        <label class="col-sm-3 control-label">{{ i18n.entry_date_duration }}</label>
        <div class="col-sm-9">
            <div class="col-sm-4" style="padding-left:0">
                <div class="input-group js-date">
                    <input type="text" name="publish" value="{{ architect.setting.publish|date('Y-m-d') }}" data-date-format="YYYY-MM-DD" class="form-control" data-toggle="tooltip" title="{{ i18n.text_publish }}">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="input-group js-date">
                    <input type="text" id="date-end" name="unpublish" value="{{ architect.setting.unpublish ? architect.setting.unpublish|date('Y-m-d') : '' }}" data-date-format="YYYY-MM-DD" class="form-control" data-toggle="tooltip" title="{{ i18n.text_unpublish }}">
                    <a onclick="$('#date-end').val('')" class="pointer text-muted pointer" data-toggle="tooltip" title="Clear date end" style="position:absolute;right:-15px;top:.5em;"><i class="fa fa-close"></i></a>
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
